<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222d32">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Property Title"
            android:id="@+id/lblTitle"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Property Type"
            android:layout_below="@+id/lblTitle"
            android:id="@+id/lblType"
            android:textAlignment="center"
            android:visibility="gone"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_marginTop="20px"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Property Details"
            android:layout_below="@+id/lblType"
            android:id="@+id/lblPropertyDetails"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Location : "
            android:layout_below="@+id/lblPropertyDetails"
            android:id="@+id/lblLocation"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Gulshan e Iqbal, Karachi"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:layout_below="@+id/lblPropertyDetails"
            android:layout_toRightOf="@+id/lblLocation"
            android:id="@+id/lblLocationValue"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Size : "
            android:layout_below="@+id/lblLocation"
            android:id="@+id/lblSize"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="240 Guzz"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:layout_below="@+id/lblLocationValue"
            android:layout_toRightOf="@+id/lblSize"
            android:id="@+id/lblSizeValue"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Price : "
            android:layout_below="@+id/lblSize"
            android:id="@+id/lblPrice"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="PKR. 2000000"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:layout_below="@+id/lblSizeValue"
            android:layout_toRightOf="@+id/lblSize"
            android:id="@+id/lblPriceValue"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Leased : "
            android:layout_below="@+id/lblPrice"
            android:id="@+id/lblLeased"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Yes"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:layout_below="@+id/lblPriceValue"
            android:layout_toRightOf="@+id/lblSize"
            android:id="@+id/lblLeasedValue"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Appartment Name : "
            android:layout_below="@+id/lblLeased"
            android:id="@+id/lblApptName"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="XYZ Appartment"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:layout_below="@+id/lblLeasedValue"
            android:layout_toRightOf="@+id/lblApptName"
            android:id="@+id/lblApptNameValue"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Appartment Block : "
            android:layout_below="@+id/lblApptName"
            android:id="@+id/lblApptBlock"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="XYZ"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:layout_below="@+id/lblApptNameValue"
            android:layout_toRightOf="@+id/lblApptBlock"
            android:id="@+id/lblApptBlockValue"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Appartment Floor : "
            android:layout_below="@+id/lblApptBlock"
            android:id="@+id/lblApptFloor"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="3"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:layout_below="@+id/lblApptBlockValue"
            android:layout_toRightOf="@+id/lblApptFloor"
            android:id="@+id/lblApptFloorValue"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="No. Of Rooms : "
            android:layout_below="@+id/lblApptFloor"
            android:id="@+id/lblApptRooms"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="5"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:layout_below="@+id/lblApptFloorValue"
            android:layout_toRightOf="@+id/lblApptRooms"
            android:id="@+id/lblApptRoomsValue"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Floors : "
            android:layout_below="@+id/lblApptRooms"
            android:id="@+id/lblHouseFloors"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="2"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:layout_below="@+id/lblApptRoomsValue"
            android:layout_toRightOf="@+id/lblHouseFloors"
            android:id="@+id/lblHouseFloorsValue"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Floor : "
            android:layout_below="@+id/lblHouseFloors"
            android:id="@+id/lblHouseFloor"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="2"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:layout_below="@+id/lblHouseFloorsValue"
            android:layout_toRightOf="@+id/lblHouseFloor"
            android:id="@+id/lblHouseFloorValue"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Rooms : "
            android:layout_below="@+id/lblHouseFloor"
            android:id="@+id/lblHouseRooms"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="2"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:layout_below="@+id/lblHouseFloorValue"
            android:layout_toRightOf="@+id/lblHouseRooms"
            android:id="@+id/lblHouseRoomsValue"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            />

        <TextView
            android:layout_marginTop="20px"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Owner Details"
            android:layout_below="@+id/lblHouseRooms"
            android:id="@+id/lblOwnerDetails"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Owner : "
            android:layout_below="@+id/lblOwnerDetails"
            android:id="@+id/lblOwnerName"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Dummy Name"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:layout_below="@+id/lblOwnerDetails"
            android:layout_toRightOf="@+id/lblOwnerName"
            android:id="@+id/lblOwnerNameValue"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Email : "
            android:layout_below="@+id/lblOwnerName"
            android:id="@+id/lblOwnerEmail"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="example@domain.com"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:layout_below="@+id/lblOwnerNameValue"
            android:layout_toRightOf="@+id/lblOwnerEmail"
            android:id="@+id/lblOwnerEmailValue"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Contact : "
            android:layout_below="@+id/lblOwnerEmail"
            android:id="@+id/lblOwnerContact"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="12341234123"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:layout_below="@+id/lblOwnerEmailValue"
            android:layout_toRightOf="@+id/lblOwnerContact"
            android:id="@+id/lblOwnerContactValue"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Location : "
            android:layout_below="@+id/lblOwnerContact"
            android:id="@+id/lblOwnerLocation"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nazimabad, Karachi"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:layout_below="@+id/lblOwnerContactValue"
            android:layout_toRightOf="@+id/lblOwnerLocation"
            android:id="@+id/lblOwnerLocationValue"
            android:textColor="#FFFFFF" />

        </android.support.percent.PercentRelativeLayout>




</RelativeLayout>
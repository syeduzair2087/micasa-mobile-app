<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context=".SignUpActivity"
    android:background="#222d32">



    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/textView3">



            <ImageView
                app:layout_widthPercent="100%"
                app:layout_heightPercent="30%"
                android:id="@+id/imageView"
                android:src="@drawable/micasa_logo_dark"
                android:layout_gravity="center"
                />

        <TextView
            app:layout_marginTopPercent="3%"
            android:layout_width="match_parent"
            app:layout_heightPercent="7%"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Please Login"
            android:id="@+id/lblLogin"
            android:textColor="#007bff"
            android:textIsSelectable="false"
            android:layout_below="@id/imageView"

            android:textSize="22sp" />


            <EditText
                app:layout_widthPercent="90%"
                app:layout_heightPercent="10%"
                android:id="@+id/txtEmail"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/lblLogin"
                app:layout_marginTopPercent="6%"
                android:hint="Email"
                android:background="@android:drawable/edit_text"
                android:backgroundTint="#374850"
                android:textColor="#808080" />

            <EditText
                app:layout_widthPercent="90%"
                app:layout_heightPercent="10%"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/txtPassword"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/txtEmail"
                app:layout_marginBottomPercent="6%"
                android:hint="Password"
                android:background="@android:drawable/edit_text"
                android:backgroundTint="#374850"
                android:textColor="#808080" />




        <TextView
            android:layout_width="match_parent"
            app:layout_heightPercent="6%"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Use Another Account."
            android:id="@+id/textView5"
            android:textColor="#007bff"
            android:textIsSelectable="false"
            android:layout_below="@id/txtPassword"
            android:visibility="gone"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            app:layout_heightPercent="6%"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Forgot Password?"
            android:id="@+id/textView4"
            android:textColor="#007bff"
            android:textIsSelectable="false"
            android:layout_below="@id/textView5"
            android:visibility="gone"
            android:textSize="18sp" />




        <Button
            app:layout_widthPercent="90%"
            android:layout_height="40dp"
            android:text="Login"
            android:id="@+id/btnLogin"
            android:layout_below="@id/textView4"

            android:layout_centerInParent="true"

            app:layout_marginTopPercent="18%"
            android:textColor="#ffffff"
            android:background="#556fff" />




    </android.support.percent.PercentRelativeLayout>



</RelativeLayout>

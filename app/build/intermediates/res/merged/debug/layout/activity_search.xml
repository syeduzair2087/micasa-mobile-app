<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context=".SignUpActivity"
    android:background="#222d32">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/textView3">

        <RadioButton
            app:layout_widthPercent="40%"
            android:layout_height="wrap_content"
            android:text="Purchase"
            android:id="@+id/radioButton"
            android:textColor="#FFFFFF"
            android:buttonTint="#808080"
            android:textAppearance="?android:attr/textAppearanceMedium"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="3%"
            app:layout_marginBottomPercent="3%"


            android:clickable="false" />

        <RadioButton
            app:layout_widthPercent="40%"
            android:layout_height="wrap_content"
            android:text="Rent"
            android:id="@+id/radioButton2"
            android:textColor="#FFFFFF"
            android:buttonTint="#808080"
            android:textAppearance="?android:attr/textAppearanceMedium"

            app:layout_marginRightPercent="5%"
            app:layout_marginTopPercent="3%"
            app:layout_marginBottomPercent="3%"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Select Zone"
            android:id="@+id/txtZone"
            android:textColor="#FFFFFF"
            app:layout_marginBottomPercent="1%"
            android:layout_below="@id/radioButton" />

        <Spinner
            app:layout_widthPercent="90%"
            android:id="@+id/spnZones"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txtZone"
            app:layout_marginBottomPercent="2%"
            android:layout_height="45dp"
            android:background="@android:drawable/spinner_dropdown_background"
            android:backgroundTint="#374850"
            android:popupBackground="#FFFFFF"

            />



            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Select Block"
            android:id="@+id/txtBlock"
            android:textColor="#FFFFFF"
            android:layout_below="@id/spnZones"
            app:layout_marginBottomPercent="1%"/>

        <Spinner
            app:layout_widthPercent="90%"
            android:layout_height="45dp"
            android:id="@+id/spnBlock"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txtBlock"
            app:layout_marginBottomPercent="2%"
            android:background="@android:drawable/spinner_dropdown_background"
            android:backgroundTint="#374850"
            android:popupBackground="#FFFFFF"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Select Category"
            android:id="@+id/txtCategory"
            android:textColor="#FFFFFF"
            android:layout_below="@id/spnBlock"
            app:layout_marginBottomPercent="1%" />

        <Spinner
            app:layout_widthPercent="90%"
            android:layout_height="45dp"
            android:background="@android:drawable/spinner_dropdown_background"
            android:backgroundTint="#374850"
            android:popupBackground="#FFFFFF"
            android:id="@+id/spnCategory"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txtCategory"
            app:layout_marginBottomPercent="2%"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Select Size"
            android:id="@+id/txtSize"
            android:textColor="#FFFFFF"
            android:layout_below="@id/spnCategory"
            app:layout_marginBottomPercent="1%" />

        <Spinner
            app:layout_widthPercent="90%"
            android:layout_height="45dp"
            android:background="@android:drawable/spinner_dropdown_background"
            android:backgroundTint="#374850"
            android:popupBackground="#FFFFFF"
            android:id="@+id/spnSize"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txtSize"
            app:layout_marginBottomPercent="2%"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Enter Price Range (Rs.)"
            android:id="@+id/txtPrice"
            android:textColor="#FFFFFF"
            android:layout_below="@id/spnSize"
            app:layout_marginBottomPercent="1%" />

        <EditText
            app:layout_widthPercent="40%"
            android:layout_height="45dp"
            android:id="@+id/edtPriceFrom"
            android:layout_alignParentLeft="true"
            app:layout_marginLeftPercent="5%"
            android:layout_below="@id/txtPrice"
            android:background="@android:drawable/edit_text"
            android:backgroundTint="#374850"
            android:hint="Minimum"
            android:inputType="number"
            android:textColor="#808080"
            app:layout_marginBottomPercent="2%" />

        <EditText
            app:layout_widthPercent="40%"
            android:layout_height="45dp"
            android:id="@+id/edtPriceTo"
            android:layout_alignParentRight="true"
            app:layout_marginRightPercent="5%"
            android:layout_below="@id/txtPrice"
            android:inputType="number"
            android:background="@android:drawable/edit_text"
            android:backgroundTint="#374850"
            android:hint="Maximum"
            android:textColor="#808080" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="To"
            android:id="@+id/txtTo"
            android:layout_below="@id/txtPrice"
            android:layout_toRightOf="@id/edtPriceFrom"
            android:layout_toLeftOf="@id/edtPriceTo"
            app:layout_marginTopPercent="3%"
            app:layout_marginBottomPercent="2%"
            android:gravity="center"
            android:textColor="#FFFFFF" />

        <Button
            android:layout_height="55dp"
            app:layout_widthPercent="92%"
            android:layout_below="@id/edtPriceFrom"
            android:text="Search"
            android:layout_centerInParent="true"
            android:id="@+id/button2" />

        <!--<RadioGroup
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_below="@id/edtPriceFrom"
            app:layout_widthPercent="90%"
            app:layout_heightPercent="11%"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:background="@android:drawable/spinner_dropdown_background"
            android:backgroundTint="#374850"
            android:gravity="center"
            >-->




        <!--</RadioGroup>-->


    </android.support.percent.PercentRelativeLayout>

    </ScrollView>




</RelativeLayout>
